				<p> <i class="fa fa-clock-o highlight rightpadding_10" aria-hidden="true"></i> Sun - Sat 07:00 - 21:00 </p>
			</div>
			<!--.col-* -->
		</div>
		<!--.row -->
	</div>
	<!--.container -->
</section>
