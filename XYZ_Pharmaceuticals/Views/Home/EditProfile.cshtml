@model Candidate
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="padding: 36px">
<h2>Edit Profile</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label for="FullName">Full Name</label>
        <input type="text" class="form-control" id="FullName" asp-for="FullName" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" asp-for="Email" required />
    </div>
    <div class="form-group">
        <label for="Resume">Resume</label>
        <input type="text" class="form-control" id="Resume" asp-for="Resume" required />
    </div>
    <div class="form-group">
        <label for="EducationDetails">Education Details</label>
        <textarea class="form-control" id="EducationDetails" asp-for="EducationDetails" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
</div>