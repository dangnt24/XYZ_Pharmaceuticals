@using XYZ_Pharmaceuticals.Entities
@model IEnumerable<Quote>
@{
    ViewData["Title"] = "Quotes List";

}

<div id="main-content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-12">
                    <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Quote Us</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i class="icon-home"></i></a></li>
                        <li class="breadcrumb-item active">Quote Us</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <div class="table-responsive table_middel">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Comments</th>
                                        <th>Status</th>
                                        <th>Admin Feedback</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var quote in Model)
                                    {
                                        <tr>
                                            <td>@quote.ID</td>
                                            <td>@quote.FullName</td>
                                            <td>@quote.Email</td>
                                            <td>@quote.Phone</td>
                                            <td>@quote.Comments</td>
                                            <td>@quote.Status</td>
                                            <td>@quote.AdminFeedback</td>
                                            <td>
                                                <a onclick="return confirm('Are you sure delete this quote?')" href="/Admin/Quote/Delete/@quote.ID" class="btn btn-danger btn-sm"><i class="icon-trash"></i></a>
                                                <a href="/Admin/Quote/Edit/@quote.ID" class="btn btn-warning btn-sm">Response</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>